<form action="{{{action}}}" method="post">
    <fieldset>
        <legend>Add potential place</legend>
        <label for="add_potential_place_name">Name: </label>
        <input type="text" name="name" id="add_potential_place_name" value="{{values.name}}">

        {{#validationMessages.name}}
            <p class="validation_message">{{.}}</p>
        {{/validationMessages.name}}

        <button>Add</button>
    </fieldset>
</form>