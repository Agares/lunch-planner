<table class="lunch_results">
    <thead>
        <tr>
            <th>Place</th>
            <th class="lunch_results__percentage_column">Votes</th>
        </tr>
    </thead>
    <tbody>
        {{#results}}
            <tr>
                <td>{{place}}</td>
                <td class="lunch_results__percentage_column">
                    <div class="lunch_results__percentage_indicator" style="width: {{votes_percentage}}%"></div>
                    <div class="lunch_results__result">
                        {{votes}} ({{votes_percentage}}%)
                    </div>
                </td>
            </tr>
        {{/results}}
    </tbody>
</table>